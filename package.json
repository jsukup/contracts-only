{
  "name": "contracts-only",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "check": "npm run lint && npm run typecheck",
    "analyze": "ANALYZE=true npm run build",
    "lighthouse": "lhci autorun",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:coverage:report": "jest --coverage && open coverage/lcov-report/index.html",
    "test:unit": "jest src/",
    "test:integration": "jest tests/integration/",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "test:update-snapshots": "jest --updateSnapshot",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:report": "playwright show-report",
    "test:e2e:install": "playwright install",
    "cleanup-test-users": "tsx scripts/cleanup-test-users.ts",
    "test:performance": "playwright test --config=playwright-performance.config.ts",
    "test:job-board": "jest src/components/jobs src/app/api/jobs && jest tests/integration/api/jobs && npm run test:e2e -- tests/e2e/job-board",
    "test:job-board:unit": "jest src/components/jobs src/app/api/jobs",
    "test:job-board:integration": "jest tests/integration/api/jobs",
    "test:job-board:e2e": "playwright test tests/e2e/job-board",
    "test:job-board:performance": "playwright test tests/performance/job-board --config=playwright-performance.config.ts",
    "test:all": "npm run test && npm run test:integration && npm run test:e2e && npm run test:performance",
    "test:auth": "node scripts/test-auth.js",
    "test:auth:local": "node scripts/test-auth.js --env=local",
    "test:auth:staging": "node scripts/test-auth.js --env=staging",
    "test:auth:coverage": "node scripts/test-auth.js --coverage",
    "test:auth:watch": "node scripts/test-auth.js --watch",
    "test:supabase": "tsx scripts/test-supabase-connection.ts",
    "test:db-setup": "tsx scripts/test-database-setup.ts",
    "test:integration:auth": "jest tests/integration/auth-core-validation.test.ts",
    "test:integration:auth:ci": "jest tests/integration/auth-*.test.ts --ci --coverage --watchAll=false --testResultsProcessor=jest-junit",
    "test:integration:auth:all": "jest tests/integration/auth-*.test.ts",
    "test:integration:verbose": "jest tests/integration --verbose"
  },
  "dependencies": {
    "@clerk/nextjs": "^6.31.5",
    "@googlemaps/js-api-loader": "^1.16.10",
    "@next/bundle-analyzer": "^15.4.7",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-toast": "^1.2.15",
    "@react-google-maps/api": "^2.20.7",
    "@stripe/stripe-js": "^7.8.0",
    "@supabase/ssr": "^0.7.0",
    "@supabase/supabase-js": "^2.55.0",
    "@types/lodash": "^4.17.20",
    "bcryptjs": "^3.0.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lodash": "^4.17.21",
    "lucide-react": "^0.539.0",
    "next": "15.4.6",
    "pg": "^8.16.3",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hot-toast": "^2.6.0",
    "recharts": "^3.1.2",
    "stripe": "^18.4.0",
    "svix": "^1.75.0",
    "tailwind-merge": "^3.3.1",
    "web-vitals": "^5.1.0",
    "zod": "^4.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.55.0",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.7.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/bcryptjs": "^3.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/supertest": "^6.0.3",
    "babel-jest": "^30.0.5",
    "dotenv": "^17.2.1",
    "eslint": "^9",
    "eslint-config-next": "15.4.6",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "jest-junit": "^16.0.0",
    "node-mocks-http": "^1.17.2",
    "playwright": "^1.55.0",
    "puppeteer": "^24.17.1",
    "supertest": "^7.1.4",
    "tailwindcss": "^4",
    "ts-node": "^10.9.2",
    "typescript": "^5"
  }
}
